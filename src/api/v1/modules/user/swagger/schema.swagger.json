{
  "schemas": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "example": 1
        },
        "firstName": {
          "type": "string",
          "example": "John"
        },
        "lastName": {
          "type": "string",
          "example": "Doe"
        },
        "email": {
          "type": "string",
          "example": "john.doe@example.com"
        },
        "password": {
          "type": "string",
          "example": "password123"
        },
        "role": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "example": 1
            },
            "name": {
              "type": "string",
              "example": "Admin"
            }
          }
        },
        "company": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "example": 1
            },
            "name": {
              "type": "string",
              "example": "Acme Corp"
            }
          },
          "nullable": true
        },
        "isActive": {
          "type": "boolean",
          "example": true
        },
        "isVerified": {
          "type": "boolean",
          "example": false
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "example": "2025-01-01T12:00:00Z"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "example": "2025-01-01T12:00:00Z"
        }
      }
    }
  }
}
